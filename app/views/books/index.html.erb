<h2 class="new-header">New Book</h2>

<!--form with部分-->

<div class="new-form">
<%= form_with model:@book, url:'/books', local:true do |f| %>

  <h4 class="new-title">Title</h4>
  <%= f.text_field :title %>

  <h4 class="new-body">Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>
</div>