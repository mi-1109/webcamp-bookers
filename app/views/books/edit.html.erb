<h1 class="edit-header">Editing Book</h1>

<!--form_with部分-->
<%= form_with model:@book, url:edit_book_path(@book.id), local:true do |f| %>

  <!--START 空白時のエラーメッセージ-->
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!--END 空白時のエラーメッセージ-->

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4 class="edit-body">Body</h4>
  <%= f.text_area :body %>
  <div class="submit">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<p class="edit-nav"><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>